# Biometric Crime Detection System - Environment Variables
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=production
DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Database Configuration
# For SQLite (development)
DATABASE_URL=sqlite:///database/criminals.db

# For PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@localhost:5432/biometric_crime_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=biometric_crime_db
DB_USER=your_db_username
DB_PASSWORD=your_db_password

# Server Configuration
PORT=5000
HOST=0.0.0.0

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif

# Security Configuration
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600  # 1 hour
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
SESSION_PERMANENT=False
PERMANENT_SESSION_LIFETIME=1800  # 30 minutes

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379
RATELIMIT_DEFAULT=100 per hour
RATELIMIT_LOGIN=5 per minute
RATELIMIT_API=200 per hour

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Face Recognition Configuration
FACE_RECOGNITION_TOLERANCE=0.6
FACE_RECOGNITION_MODEL=hog  # or 'cnn' for better accuracy but slower

# Fingerprint Configuration
FINGERPRINT_MATCH_THRESHOLD=0.7
FINGERPRINT_QUALITY_THRESHOLD=0.5

# Email Configuration (for alerts)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Admin Configuration
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_SUPERADMIN_USERNAME=superadmin
DEFAULT_SUPERADMIN_PASSWORD=superadmin123

# Monitoring and Analytics
ENABLE_METRICS=True
METRICS_PORT=9090

# External API Keys (if needed)
# EXTERNAL_API_KEY=your-api-key-here
# EXTERNAL_API_URL=https://api.example.com

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_INTERVAL=24  # hours
BACKUP_RETENTION=7  # days
BACKUP_LOCATION=/backups

# Development/Testing
TESTING=False
TEST_DATABASE_URL=sqlite:///test_criminals.db